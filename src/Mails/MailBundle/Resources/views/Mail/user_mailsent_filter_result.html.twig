{% extends "MailsMailBundle::layout_admin.html.twig" %}
{#On defini l'user depuis la session#}
{% set user = app.session.get('user') %}
{% block title %}Liste filtrée - Courriers envoyés par l'utilisateur <strong>{{ user.username | title }}</strong>{% endblock %}
{#On defini nos variables depuis la session#}
{% set allMailsentFilterByUser, mail = app.session.get('allMailsentFilterByUser'), app.session.get('mail')%}

{% block mailsadmin_body %}
{#On efface tous nos attributs de session#}
{{ app.session.clear }}
<h2 class="text-center">Synthèse utilisateur</h2>
<div class="well">
    <ul>
        <li>Nom utilisateur : {{user.username}}</li>
        <li>Adresse e-mail : {{user.email}}</li>
    </ul>
</div>

<h1 class="text-center">Rappel critères de filtrage</h1>
<div class="well">
    <ul>
        <li>Nombre de jours d'ancienneté du courrier : {{ mail.nbDaysBefore }} jour(s) et plus</li>
        <li>Réception : {% if mail.received == true %}OUI{% else %}NON{% endif %}</li>
    </ul>
</div>

<h1 class="text-center">{{ block('title') }}</h1>

<div class="tab-content">
    <div class="tab-pane fade in active adminTable" id="allMailsentFilterByUser">
        {{ include("@user_mailsent_filter_result_views/bl_user_mailsent_filter_result.html.twig") }} 
    </div>
</div>   
{% endblock %}
