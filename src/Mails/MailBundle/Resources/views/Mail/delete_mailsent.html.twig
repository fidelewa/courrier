{# src/OC/PlatformBundle/Resources/views/Advert/delete.html.twig #}

{% extends "MailsMailBundle::layout.html.twig" %}

{% block title %}
  Supprimer un courrier envoyé - {{ parent() }}
{% endblock %}

{% block mailsmail_body %}

  <h2>Supprimer un courrier envoyé</h2>

  <p>
    Etes-vous certain de vouloir supprimer le courrier envoyé "{{ mail.objet }}" ?
  </p>

  {# On met l'id du courrier dans la route de l'action du formulaire #}
  <form action="{{ path('mails_mailsent_delete', { 'id': mail.id }) }}" method="post">
    <a href="{{ path('mails_mailsent_detail', {'id': mail.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour au courrier
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>

{% endblock %}