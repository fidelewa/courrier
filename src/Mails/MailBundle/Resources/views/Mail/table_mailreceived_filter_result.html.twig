<table class="table table-hover table-condensed">
    <thead align="center" valign="middle" bgcolor="#A9A9A9">
        <tr>
            <th>Reference</th><th>Objet</th><th>Date d'enregistrement</th><th>Date reception</th><th>Nbre pièces j.</th><th>Acc. reception</th>
            <th>Traitement</th><th>Expéditeur</th><th>Destinataire</th><th></th><!--Actions column -->
        </tr>
    </thead>
{% set fond = '#EFEFEF' %}
{% for mailreceivedByFilter in allmailreceivedByFilter %}
    <tr bgcolor={{fond}} valign='top'>
        <td><u><a href="{{ path('mails_mailreceived_detail', {'id': mailreceivedByFilter.id}) }}">[{{ mailreceivedByFilter.reference}}]</a></u></td>
        <td>{{ mailreceivedByFilter.objet }}</td>
        <td>{% if mailreceivedByFilter.dateEdition is not null %}{{ mailreceivedByFilter.dateEdition.format('d/m/Y à H:i:s') }}{% endif %}</td>
        <td>
            {% if mailreceivedByFilter.mailreceived.dateReception is defined %}
            {{ mailreceivedByFilter.mailreceived.dateReception.format('d/m/Y à H:i:s') }}
            {% endif %}
        </td>
        <td>{{ mailreceivedByFilter.nombrePiecesJointes}}</td>
        <td>{% if mailreceivedByFilter.received == true %}OUI{% else %}NON{% endif %}</td>
        <td>{% if mailreceivedByFilter.treated == true %}OUI{% else %}NON{% endif %}</td>
        <td>{{ mailreceivedByFilter.mailreceived.actor.name}}</td>
        <td>{{ mailreceivedByFilter.mailreceived.user.username}}</td>
        <td>
            {{ render(controller("MailsCoreBundle:Home:manageMails",{'editRoute': 'mails_mailreceived_edit','detailRoute': 'mails_mailreceived_detail',
            'deleteRoute': 'mails_mailreceived_delete','id': mailreceivedByFilter.id,'var': mailreceivedByFilter,'type': 'mail received',
            }))}}
        </td>
    </tr>
    {% if fond == '#EFEFEF' %}{% set fond = '#DDD' %}{% else %}{% set fond = '#EFEFEF' %}{% endif %}
{% endfor %}
</table>