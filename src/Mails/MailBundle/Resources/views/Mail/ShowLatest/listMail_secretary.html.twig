{# On affiche tous les messages flash dont le nom est « success » #}
    {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success"> {{ message }}</div>
    {% endfor %}

<div style="display:flex;justify-content:center;">
<section style="flex:1;margin-right:10px;">
  <h2 style="text-align:center">Courriers envoyés</h2>

    {% if listMailsentBySecretary %}
    <div class="alert alert-info">Vous avez un ou plusieurs courriers envoyés à enregistrer</div>
    
    <ul class="nav nav-pills nav-stacked encadrer_section">
        {% for mailsentBySecretary in listMailsentBySecretary %}
            <p>
                <a class="souligne" href="{{ path('mails_mailsent_detail', {'id': mailsentBySecretary.id}) }}">
                    {{ mailsentBySecretary.objet }}
                </a>
                <mark>
                        <a class="souligne" href="{{ path('mails_mailsent_registration', {'id': mailsentBySecretary.id}) }}">
                            Enregistrer le courrier
                        </a>
                 </mark>
            </p>
         {% endfor %}
         <p>  
            <a class="souligne" href="{{ path('mails_mail_mailsent') }}">Voir plus</a>
         </p>
     </ul>   
     {% else %}
        <div class="alert alert-warning">Vous n'avez aucun courrier envoyé à enregistrer</div>
     {% endif %}
</section>
<section style="flex:1;">
  <h2 style="text-align:center">Courriers reçus</h2>

     {% if listMailreceivedBySecretary %}
     <div class="alert alert-info">Vous avez un ou plusieurs courriers reçus à enregistrer</div>
     
     <ul class="nav nav-pills nav-stacked encadrer_section">
        {% for mailreceivedBySecretary in listMailreceivedBySecretary %}
            <p>
                <a class="souligne" href="{{ path('mails_mailreceived_detail', {'id': mailreceivedBySecretary.id}) }}">
                    {{ mailreceivedBySecretary.objet }}
                </a>
                <mark> 
                    <a class="souligne" href="{{ path('mails_mailreceived_registration', {'id': mailreceivedBySecretary.id}) }}">
                       Enregistrer le courrier
                    </a>
                </mark>
            </p>
        {% endfor %}
        <p>
            <a class="souligne" href="{{ path('mails_mail_mailreceived') }}">Voir plus</a>
        </p>
     </ul>   
     {% else %}
        <div class="alert alert-warning">Vous n'avez aucun courrier reçus à enregistrer</div>
     {% endif %}
</section>
</div>
