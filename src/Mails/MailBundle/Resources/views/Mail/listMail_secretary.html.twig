{# On affiche tous les messages flash dont le nom est « success » #}
    {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success">Message flash : {{ message }}</div>
    {% endfor %}
    
  <h3>Courriers envoyés</h3>

    {% if listMailsentBySecretary %}
    <div class="alert alert-info">Vous avez un ou plusieurs courriers envoyés à enregistrer</div>
    
    <ul class="nav nav-pills nav-stacked">
        {% for mailsentBySecretary in listMailsentBySecretary %}
            <p>
                <a href="{{ path('mails_mail_mailsent_detail', {'id': mailsentBySecretary.id}) }}">
                    <u>{{ mailsentBySecretary.objet }}</u>
                </a>
                <span style="background:#FFFF00">
                  <a href="{{ path('mails_admin_mailsent_registration', {'id': mailsentBySecretary.id}) }}">
                    <u>Enregistrer le courrier</u>
                 </a>
                 </span>
            </p>
         {% endfor %}  
         <a href="{{ path('mails_mail_mailsent') }}"><u>Voir plus</u></a>
     </ul>   
     {% else %}
        <div class="alert alert-warning">Vous n'avez aucun courrier envoyé à enregistrer</div>
     {% endif %}
  
  <h3>Courriers reçus</h3>

     {% if listMailreceivedBySecretary %}
     <div class="alert alert-info">Vous avez un ou plusieurs courriers reçus à enregistrer</div>
     
     <ul class="nav nav-pills nav-stacked">
        {% for mailreceivedBySecretary in listMailreceivedBySecretary %}
            <p>
                <a href="{{ path('mails_mail_mailreceived_detail', {'id': mailreceivedBySecretary.id}) }}">
                    <u>{{ mailreceivedBySecretary.objet }}</u>
                </a>
                <span style="background:#FFFF00">
                    <a href="{{ path('mails_admin_mailreceived_registration', {'id': mailreceivedBySecretary.id}) }}">
                       <u>Enregistrer le courrier</u>
                    </a>
                </span>
            </p>
        {% endfor %}
        <a href="{{ path('mails_mail_mailreceived') }}"><u>Voir plus</u></a>
     </ul>   
     {% else %}
        <div class="alert alert-warning">Vous n'avez aucun courrier reçus à enregistrer</div>
     {% endif %}

     
   
