{% extends "MailsMailBundle::layout.html.twig" %}
{% block title %}Accueil{% endblock %}
{% block mailsmail_body %}

 <h1 class="text-center encadrer">Liste de tous les courriers reçus</h1>

 {% if app.user and is_granted('ROLE_ADMIN') %}
  {#{% if nombreTotalPages > 4 %}#}
  <p style="float:right;">
    <a class="souligne right_space" href="{{ path('mails_mailreceived_filter') }}">Filtrer la liste</a>
    |
    <a class="souligne left_space" href="{{ path('mails_all_mailreceived_filter') }}">Filtrer toute la liste</a>
  </p>
  {#{% endif %}#}
{% endif %}

 <div style="clear:both;">
  {{ include("@mailreceived_index_views/bl_index_mailreceived.html.twig") }}
 </div>

     <ul class="pagination">
      {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
      {% for p in range(1, nombreTotalPages) %}
        <li{% if p == page %} class="active"{% endif %}>
          <a href="{{ path('mails_mail_mailreceived_index', {'page': p}) }}">{{ p }}</a>
        </li>
      {% endfor %}
     </ul>
{% endblock %}
