{% if mails %}
    {% for mail in mails %}
      
            <h2><a class="souligne" href="{{ path('mails_mailreceived_detail', {'id': mail.id}) }}">{{ mail.objet }}</a></h2>
            <p>Date de reception : <em>le {{ mail.mailreceived.dateReception|date('d/m/Y à H:i:s') }}</em></p>
                {% if app.user and is_granted('ROLE_ADMIN') %}
                  <mark>
                      <a class="souligne" href="{{ path('mails_mailreceived_validation', {'id': mail.id}) }}">
                          Valider le courrier
                      </a>
                  </mark>
                {% endif %}
                {% if app.user and is_granted('ROLE_SECRETAIRE') %}
                <mark>
                    <a class="souligne" href="{{ path('mails_mailreceived_registration', {'id': mail.id}) }}">
                            Enregistrer le courrier
                    </a>
                </mark>
                {% endif %}
        
      {% endfor %}   
{% else %}
    <div class="alert alert-warning">Vous n'avez aucun courrier reçu à enregistrer</div>
{% endif %}
