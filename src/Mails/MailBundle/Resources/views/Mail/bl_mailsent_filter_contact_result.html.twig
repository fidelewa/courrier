{% if allMailsentFilterByActor %}
        <div class="alert alert-success">La liste ci-dessous correspond au résultat de la recherche !</div>
        
        <div class="table-responsive">
            <table class="table table-hover table-condensed">
                <thead align="center" valign="middle" bgcolor="#A9A9A9">
                    <tr>
                        <th>Reference</th>
                        <th>Objet</th>
                        <th>Date d'enregistrement</th>
                        <th>Date envoi</th>
                        <th>Nbre pièces j.</th>
                        <th>Acc. reception</th>
                        <th></th>  
                    </tr>
                </thead>
                {% set fond = '#EFEFEF' %}
                {% for mailsentFilterByActor in allMailsentFilterByActor %}
                <tr bgcolor={{fond}} valign='top'>
                    <td><u><a href="{{ path('mails_mailsent_detail', {'id': mailsentFilterByActor.id}) }}">[{{ mailsentFilterByActor.reference}}]</a></u></td>
                    <td>{{ mailsentFilterByActor.objet }}</td>
                    <td>
                    {% if mailsentFilterByActor.dateEdition is not null %}
                        {{ mailsentFilterByActor.dateEdition.format('d/m/Y à H:i:s') }}
                    {% endif %}
                    </td>
                    <td>
                    {% if mailsentFilterByActor.mailsent.dateEnvoi is defined %}
                        {{ mailsentFilterByActor.mailsent.dateEnvoi.format('d/m/Y à H:i:s') }}
                    {% endif %}
                    </td>
                    <td>{{ mailsentFilterByActor.nombrePiecesJointes}}</td>
                    <td>{% if mailsentFilterByActor.received == true %}OUI{% else %}NON{% endif %}</td>
                    <td>
                    {{ render(controller("MailsCoreBundle:Home:manageMails", 
                    {
                        'editRoute': 'mails_mailsent_edit',
                        'detailRoute': 'mails_mailsent_detail',
                        'deleteRoute': 'mails_mailsent_delete',
                        'id': mailsentFilterByActor.id,
                        'var': mailsentFilterByActor,
                        'type': 'mail sent',
                    }
                    )) 
                    }}
                    </td>
                </tr>
                {% if fond == '#EFEFEF' %}{% set fond = '#DDD' %}{% else %}{% set fond = '#EFEFEF' %}{% endif %}
                {% endfor %}
            </table>
        </div>
        {% else %}
        <div class="alert alert-warning">Aucune donnée ne correspond à cette recherche !</div>
        {% endif %}
       
        {% if app.user and is_granted('ROLE_ADMIN') %}
        <a href="{{ path('mails_mailsent_add') }}"><u>Créer un nouveau courrier envoyé</u></a> 
        {% endif %}