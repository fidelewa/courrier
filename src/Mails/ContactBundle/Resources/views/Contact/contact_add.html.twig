{% extends "MailsMailBundle::layout.html.twig" %}
{% block title %}{{title}}{% endblock %}
{% block body %}

<h1 class="text-center encadrer">{{ block('title') }}</h1>

<div class="well">

    {{ form_start(actorForm, {'attr': {'class': 'form-horizontal'} }) }}

    <p>
        <div class="form-group">
            {{ form_label(actorForm.name, "Nom du contact :", { 'label_attr':  {
                'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-6">
                {{ form_errors(actorForm.name) }}
                {{ form_widget(actorForm.name, { 'attr':  {
                    'class': 'form-control','autofocus':'autofocus'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-3">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
        {{ form_rest(actorForm) }}
    </p>

    {{ form_end(actorForm) }}

</div>
<p>
{% if app.user and is_granted('ROLE_ADMIN') %}
<a class="souligne right_space" href="{{ path('mails_contact_show_all') }}">Retour Ã  la liste des contacts</a>
{% endif %}
|<a class="souligne left_space" href="{{ path('mails_core_home') }}">Accueil</a>
</p>
{% endblock %}
