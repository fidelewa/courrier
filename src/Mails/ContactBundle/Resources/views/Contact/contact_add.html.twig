{% extends "MailsMailBundle::layout.html.twig" %}
{% block title %}{{title}}{% endblock %}
{% block body %}

<h1 class="text-center">{{ block('title') }}</h1>

<div class="well">

    {{ form_start(actorForm, {'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        {{ form_label(actorForm.name, "Nom du contact :", { 'label_attr':  {
            'class': 'col-sm-4 control-label'
        }}) }}
        <div class="col-sm-6">
            {{ form_errors(actorForm.name) }}
            {{ form_widget(actorForm.name, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-3">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </div>
    {{ form_rest(actorForm) }}
    
    {{ form_end(actorForm) }}

</div>
