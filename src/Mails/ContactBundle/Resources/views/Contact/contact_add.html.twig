        {{ form_label(actorForm.name, "Nom de l'interlocuteur * :", { 'label_attr':  {
            'class': 'col-sm-4 control-label'
        }}) }}
        <div class="col-sm-6">
            {{ form_errors(actorForm.name) }}
            {{ form_widget(actorForm.name, { 'attr':  {
                'class': 'form-control'
            }}) }}
