{% extends "MailsMailBundle::layout.html.twig" %}
{% block title %}Liste des courriers de l'utilisateur <strong>{{ user.username | title }}</strong> {% endblock %}
{% block mailsmail_body %}

<h1 class="text-center encadrer">Synthèse utilisateur</h1>
<div class="well">
    <ul>
        <li>Nom : {{user.username}}</li>
        <li>Adresse e-mail : {{user.email}}</li>
    </ul>
</div>
<h1 class="text-center encadrer">{{ block('title') }}</h1>
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">{{ flashMessage }}</div>
{% endfor %}
<div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <ul class="nav nav-tabs nav-justified">
            <li class="active"><a href="#allMailsentByUser" data-toggle="tab">Courriers Envoyés</a></li>
            <li><a href="#allMailreceivedByUser" data-toggle="tab">Courrier Reçus</a></li>
        </ul>
    </div>
</div>
<div class="tab-content">
    <div class="tab-pane fade in active adminTable" id="allMailsentByUser">
        {{ include('@user_mailsent_views/mailsent_user.html.twig') }}
    </div> 
   <div class="tab-pane fade adminTable" id="allMailreceivedByUser">
        {{ include('@user_mailreceived_views/mailreceived_user.html.twig') }}
    </div>   
</div>
{% endblock %}
